@model TicTacToeViewModel

@{
    ViewData["Title"] = "Tic Tac Toe";
}
<!--Code below for testvalue -->
<a asp-action="TestAction"><b>Call Action</b></a>

@if (Model.IsGameOver)
{
    <a asp-action="Index"><b>New Game</b></a>
}
else
{
    <h2 class="mt-2">@Model.Selected.Mark's turn</h2>
}

<form asp-action="Index" method="post">

    <input type="hidden" asp-for="Selected.Mark" />

    <div class="board-row">

        @foreach (Cell cell in Model.Cells)
        {
            @if (cell.IsBlank)
            {
                <!--Cell is available and can be selected-->
                <button type="submit" name="Selected.Id" value="@cell.Id"
                        class="btn btn-outline-dark">
                    &nbsp;
                </button>
            }
            else
            {
                <!-- cell has already been marked as X or O, get marked-->
                <button class="btn btn-outline-dark" disabled>@cell.Mark</button>
            }

            @if (cell.IsEndCell)
            {
                <br />
            }
        }
    </div>

</form>

